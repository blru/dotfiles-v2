output "Hewlett Packard HP 22er *" {
    enable
    mode 1920x1080@60Hz
    position 0,0
    scale 1.0
    alias $primary_desktop
}

output "Lenovo Group Limited *" {
    enable
    mode 1280x1024@60Hz
    position 1920,0
    scale 1.0
    alias $secondary_desktop
}

profile desktop_single {
    output $primary_desktop enable
}

profile desktop_double {
    output $primary_desktop enable
    output $secondary_desktop disable
}
