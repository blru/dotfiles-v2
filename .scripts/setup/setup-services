#!/usr/bin/env bash

systemctl --user add-wants niri.service plasma-polkit-agent.service
systemctl --user add-wants niri.service xwayland-satellite.service
systemctl --user add-wants niri.service swww.service
systemctl --user add-wants niri.service swaync.service
systemctl --user add-wants niri.service swayidle.service

systemctl --user add-wants niri.service eww.service

echo "Services have been setup."
